<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".About">

    <!-- Label Nom -->
    <TextView
        android:id="@+id/textLabelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Prénom:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp" />

    <!-- Valeur Nom (s'étire jusqu'à la fin) -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mohamed Ben Jazia"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/textLabelName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textLabelName"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Label Email -->
    <TextView
        android:id="@+id/textLabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Valeur Email -->
    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="mohamed.benjazia@polytechnicien.tn"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/textLabelEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textLabelEmail"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Label Site web -->
    <TextView
        android:id="@+id/textLabelSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site web:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <!-- Valeur Site web -->
    <TextView
        android:id="@+id/textViewSite"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="www.monsite.tn"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/textLabelSite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textLabelSite"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Bouton Fermer -->
    <Button
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fermer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
